{
    "manifest_version": 3,
    "name": "Simple Extension",
    "version": "1.0",
    "description": "A simple Chrome extension with a user input field.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/favicon-16x16.png",
        "48": "icons/favicon.ico",
        "128": "icons/favicon.ico"
      }
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["popup.js"]
        }
      ],
    "permissions": ["storage", "proxy"]
  }
  